{
  "name": "golf-score-manager",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "webpack serve --config webpack.config.js --mode development",
    "build": "tsc && webpack --config webpack.config.js --mode production",
    "build:staging": "tsc && webpack --config webpack.config.js --mode production",
    "build:production": "tsc && webpack --config webpack.config.js --mode production",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives",
    "lint:fix": "eslint . --ext ts,tsx --fix",
    "preview": "webpack serve --config webpack.config.js --mode production",
    "preview:staging": "webpack serve --config webpack.config.js --mode production",
    "preview:production": "webpack serve --config webpack.config.js --mode production",
    "typecheck": "tsc --noEmit",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:debug": "playwright test --debug",
    "format": "prettier --write \"src/**/*.{ts,tsx,js,jsx,json,css,md}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx,js,jsx,json,css,md}\"",
    "emulators": "firebase emulators:start --import=./firebase-data --export-on-exit",
    "emulators:ui": "firebase emulators:start --import=./firebase-data --export-on-exit",
    "emulators:kill": "firebase emulators:exec --only firestore 'echo done'",
    "firebase:init": "firebase init",
    "firebase:deploy": "firebase deploy",
    "deploy:staging": "firebase use golf-score-manager-staging && npm run build:staging && firebase deploy",
    "deploy:production": "firebase use golf-score-manager-prod && npm run build:production && firebase deploy",
    "deploy:functions:staging": "firebase use golf-score-manager-staging && firebase deploy --only functions",
    "deploy:functions:production": "firebase use golf-score-manager-prod && firebase deploy --only functions",
    "functions:dev": "cd functions && npm run serve",
    "functions:deploy": "cd functions && npm run deploy",
    "seed:emulator": "npm run emulators:exec -- 'node scripts/seed-data.js'",
    "backup:emulator": "firebase emulators:export ./firebase-data-backup",
    "restore:emulator": "firebase emulators:start --import=./firebase-data-backup"
  },
  "dependencies": {
    "@emotion/react": "^11.11.1",
    "@emotion/styled": "^11.11.0",
    "@hookform/resolvers": "^3.3.2",
    "@mui/icons-material": "^5.14.18",
    "@mui/material": "^5.14.18",
    "@mui/x-date-pickers": "^6.18.1",
    "@tanstack/react-query": "^5.8.4",
    "@vitejs/plugin-react-swc": "^3.10.2",
    "chart.js": "^4.4.0",
    "dayjs": "^1.11.10",
    "firebase": "^10.6.0",
    "react": "^18.2.0",
    "react-chartjs-2": "^5.2.0",
    "react-dom": "^18.2.0",
    "react-hook-form": "^7.48.2",
    "react-hot-toast": "^2.4.1",
    "react-router-dom": "^6.20.1",
    "zod": "^3.22.4",
    "zustand": "^4.4.7"
  },
  "devDependencies": {
    "@babel/core": "^7.27.7",
    "@babel/preset-env": "^7.27.2",
    "@babel/preset-react": "^7.27.1",
    "@babel/preset-typescript": "^7.27.1",
    "@playwright/test": "^1.53.1",
    "@tanstack/react-query-devtools": "^5.8.4",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/react": "^18.2.37",
    "@types/react-dom": "^18.2.15",
    "@typescript-eslint/eslint-plugin": "^8.35.0",
    "@typescript-eslint/parser": "^8.35.0",
    "@vitejs/plugin-react": "^4.1.1",
    "@vitest/ui": "^0.34.6",
    "babel-loader": "^10.0.0",
    "css-loader": "^7.1.2",
    "dotenv-webpack": "^8.1.1",
    "eslint": "^8.53.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.4",
    "file-loader": "^6.2.0",
    "html-webpack-plugin": "^5.6.3",
    "jsdom": "^26.1.0",
    "playwright": "^1.53.1",
    "prettier": "^3.1.0",
    "style-loader": "^4.0.0",
    "ts-loader": "^9.5.2",
    "typescript": "^5.2.2",
    "vite": "^5.0.0",
    "vitest": "^0.34.6",
    "webpack": "^5.99.9",
    "webpack-cli": "^6.0.1",
    "webpack-dev-server": "^5.2.2"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{js,jsx,json,css,md}": [
      "prettier --write"
    ]
  },
  "bundlesize": [
    {
      "path": "./dist/assets/*.js",
      "maxSize": "500kb"
    },
    {
      "path": "./dist/assets/*.css",
      "maxSize": "100kb"
    }
  ]
}
